{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "/usr/bin/gcc",
            "args": [
                "-Wall",
                "-fdiagnostics-color=always",
                "-g",
                "-std=c99",
                "-D_XOPEN_SOURCE=500",
                "src/*.c",
                "-o",
                "../../bin/server"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger.",
        }
    ],
    "version": "2.0.0"
}